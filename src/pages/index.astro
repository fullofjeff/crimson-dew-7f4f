<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Coming Soon</title>
  <style>
    /* reset */
    html, body { margin:0; padding:0; width:100%; height:100%; overflow:hidden; }
    /* center & perspective */
    .card-container {
      display: flex;
      justify-content: center;
      align-items: center;
      width:100%; height:100%;
      perspective: 1000px;
      background: #f5f5f5; /* or replace with a full‑screen bg image */
    }
    .card {
      width: 80vw; max-width: 300px;
      height: calc(80vw * 1.5); max-height: 450px;
      position: relative;
      transform-style: preserve-3d;
      transition: transform 0.6s;
      cursor: pointer;
    }
    .card.is-flipped {
      transform: rotateY(180deg);
    }
    .card-face {
      position: absolute;
      top:0; left:0;
      width:100%; height:100%;
      backface-visibility: hidden;
    }
    .card-face.back {
      transform: rotateY(180deg);
    }
    /* full‑bleed card images */
    .card-bg {
      width:100%; height:100%;
      object-fit: cover;
      display:block;
    }
    /* logo in center */
    .logo {
      position: absolute;
      top:50%; left:50%;
      transform: translate(-50%, -50%);
      width: 50%; /* adjust as needed */
    }
    /* corner SVGs */
    .corner {
      position: absolute;
      width: 25%; /* adjust for legibility */
    }
    .top-left    { top: 5%; left: 5%; }
    .top-right   { top: 5%; right:5%; }
    .bot-left    { bottom:5%; left:5%; }
    .bot-right   { bottom:5%; right:5%; }
  </style>
</head>
<body>
  <div class="card-container">
    <div class="card" id="card">
      <!-- FRONT -->
      <div class="card-face front">
        <img src="/card-front.webp" alt="" class="card-bg" />
        <img src="/logo.svg" alt="Logo" class="logo" />
        <!-- replace these with your corner‑text SVG filenames -->
        <img src="/corner-tl.svg" alt="" class="corner top-left" />
        <img src="/corner-tr.svg" alt="" class="corner top-right" />
        <img src="/corner-bl.svg" alt="" class="corner bot-left" />
        <img src="/corner-br.svg" alt="" class="corner bot-right" />
      </div>
      <!-- BACK -->
      <div class="card-face back">
        <img src="/card-back.webp" alt="" class="card-bg" />
      </div>
    </div>
  </div>

  <script>
    const card = document.getElementById('card');
    card.addEventListener('click', () => {
      card.classList.toggle('is-flipped');
    });
  </script>
</body>
</html>
