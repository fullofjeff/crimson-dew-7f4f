<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Coming Soon</title>
  <style>
    html, body {
      margin: 0;
      padding: 0;
      width: 100%;
      height: 100%;
      background: #f5f5f5;
      overflow: auto;
    }

    .card-container {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      height: 100%;
      perspective: 1000px;
    }

    .card {
      width: 90vw;
      max-width: 600px;
      aspect-ratio: 1597 / 1006;
      position: relative;
      transform-style: preserve-3d;
      transition: transform 0.6s;
      cursor: pointer;
    }

    .card.is-flipped {
      transform: rotateY(180deg);
    }

    .card-face {
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      backface-visibility: hidden;
      border-radius: 16px;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
    }

    .card-face.back {
      transform: rotateY(180deg);
    }

    .card-bg {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
      border-radius: 16px;
    }

    .card-face.front {
      position: relative;
    }

    .logo-overlay {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 20%;
      z-index: 2;
      pointer-events: none;
    }

    .logo-overlay img {
      width: 100%;
      height: auto;
      display: block;
    }

    .corner {
      position: absolute;
      width: auto;
      object-fit: contain;
      pointer-events: none;
    }

    .top-left {
      height: 7.5%;
      top: 9%;
      left: 8%;
    }

    .top-right {
      height: 7.5%;
      top: 9%;
      right: 7%;
    }

    .bot-left {
      height: 8.8%;
      bottom: 8%;
      left: 8%;
    }

    .bot-right {
      height: 8.8%;
      bottom: 8%;
      right: 7%;
    }

    .back-text {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      display: flex;
      gap: 0.5rem;
      pointer-events: none;
    }

    .back-text.desktop {
      flex-direction: row;
    }

    .back-text.mobile {
      display: none;
      flex-direction: column;
    }

    @media (max-width: 600px) {
      .back-text.desktop {
        display: none;
      }
      .back-text.mobile {
        display: flex;
      }
      .card {
        width: 70vw;
        max-width: 350px;
        aspect-ratio: 1006 / 1597;
      }
    }

    .back-text picture,
    .back-text img {
      display: block;
      max-width: 100%;
      height: auto;
    }

    /* Fix scaling issue on mobile portrait */
    @media (max-width: 768px) and (max-aspect-ratio: 3/4) {
      .card {
        transform: rotateY(180deg) scale(0.85);
        margin: auto;
      }
    }
  </style>
</head>
<body>
  <div class="card-container">
    <div class="card" id="card">
      <!-- FRONT -->
      <div class="card-face front">
        <img src="/card-front.webp" alt="Card Front" class="card-bg" />
        <picture class="logo-overlay">
          <source type="image/webp" srcset="/logo-overlay-rough.webp" />
          <img src="/logo-overlay-rough.svg" alt="Logo" />
        </picture>
        <img src="/corner top-left.svg" class="corner top-left" alt="" />
        <img src="/corner top-right.svg" class="corner top-right" alt="" />
        <img src="/corner bottom-left.svg" class="corner bot-left" alt="" />
        <img src="/corner bottom-right.svg" class="corner bot-right" alt="" />
      </div>

      <!-- BACK -->
      <div class="card-face back">
        <img src="/card-back.webp" alt="Card Back" class="card-bg" />
        <div class="back-text desktop">
          <picture><source type="image/webp" srcset="/suit-spade.webp"><img src="/suit-spade.svg" /></picture>
          <picture><source type="image/webp" srcset="/wonder.webp"><img src="/wonder.svg" alt="WONDER" /></picture>
          <picture><source type="image/webp" srcset="/suit-diamond.webp"><img src="/suit-diamond.svg" /></picture>
          <picture><source type="image/webp" srcset="/dream.webp"><img src="/dream.svg" alt="DREAM" /></picture>
          <picture><source type="image/webp" srcset="/suit-club.webp"><img src="/suit-club.svg" /></picture>
          <picture><source type="image/webp" srcset="/believe.webp"><img src="/believe.svg" alt="BELIEVE" /></picture>
          <picture><source type="image/webp" srcset="/suit-heart.webp"><img src="/suit-heart.svg" /></picture>
        </div>
        <div class="back-text mobile">
          <picture><source type="image/webp" srcset="/suit-spade.webp"><img src="/suit-spade.svg" /></picture>
          <picture><source type="image/webp" srcset="/wonder.webp"><img src="/wonder.svg" alt="WONDER" /></picture>
          <picture><source type="image/webp" srcset="/suit-diamond.webp"><img src="/suit-diamond.svg" /></picture>
          <picture><source type="image/webp" srcset="/dream.webp"><img src="/dream.svg" alt="DREAM" /></picture>
          <picture><source type="image/webp" srcset="/suit-club.webp"><img src="/suit-club.svg" /></picture>
          <picture><source type="image/webp" srcset="/believe.webp"><img src="/believe.svg" alt="BELIEVE" /></picture>
          <picture><source type="image/webp" srcset="/suit-heart.webp"><img src="/suit-heart.svg" /></picture>
        </div>
      </div>
    </div>
  </div>

  <script>
    const card = document.getElementById('card');
    let clicked = false;

    card.addEventListener('mouseenter', () => {
      if (!clicked) card.classList.add('is-flipped');
    });

    card.addEventListener('mouseleave', () => {
      if (!clicked) card.classList.remove('is-flipped');
    });

    card.addEventListener('click', () => {
      clicked = true;
      card.classList.toggle('is-flipped');
    });
  </script>
</body>
</html>
