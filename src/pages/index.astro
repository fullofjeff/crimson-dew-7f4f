<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Coming Soon</title>
  <style>
    html, body {
      margin: 0; padding: 0;
      width: 100%; height: 100%;
      overflow: hidden;
      background: #f5f5f5;
    }

    .card-container {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%; height: 100%;
      perspective: 1000px;
    }

    .card {
      width: 90vw;
      max-width: 600px;
      aspect-ratio: 1597 / 1006;
      position: relative;
      transform-style: preserve-3d;
      transition: transform 0.6s;
      cursor: pointer;
    }

    .card.is-flipped {
      transform: rotateY(180deg);
    }

    .card.rotate-mobile {
      aspect-ratio: 1006 / 1597;
    }

    .card-face {
      position: absolute;
      top: 0; left: 0;
      width: 100%; height: 100%;
      backface-visibility: hidden;
    }

    .card-face.back {
      transform: rotateY(180deg);
    }

    .card-bg {
      width: 100%; height: 100%;
      object-fit: cover;
      display: block;
      transition: transform 0.6s ease;
    }

    .card.rotate-mobile .card-bg {
      transform: rotate(90deg) scale(1);
      object-fit: contain;
    }

    .card-face.front {
      position: relative;
    }

    .logo-overlay {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      transform-origin: center center;
      width: 20%;
      max-width: none;
      height: auto;
      z-index: 2;
      pointer-events: none;
    }

    .logo-overlay img {
      width: 100%;
      height: auto;
      display: block;
    }

    .corner {
      position: absolute;
      width: auto;
      object-fit: contain;
      pointer-events: none;
    }

    .top-left  { height: 7.5%; top: 9%; left: 8%; }
    .top-right { height: 7.5%; top: 9%; right: 7%; }
    .bot-left  { height: 8.8%; bottom: 8%; left: 8%; }
    .bot-right { height: 8.8%; bottom: 8%; right: 7%; }

    .back-text {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      display: flex;
      gap: 0.5rem;
      pointer-events: none;
      z-index: 2;
    }

    .back-text.desktop { flex-direction: row; }
    .back-text.mobile  { display: none; flex-direction: column; }

    .back-text picture,
    .back-text img {
      display: block;
      max-width: 100%;
      height: auto;
    }

    @media (max-width: 600px) {
      .back-text.desktop { display: none; }
      .back-text.mobile  { display: flex; }

      /* MOBILE OVERRIDES FOR SCALE CONTROL */
      .top-left  { height: 4.5%; }
      .top-right { height: 2.5%; }
      .bot-left  { height: 2.5%; }
      .bot-right { height: 5.5%; }

      .back-text.mobile picture img {
        width: 10%;
        margin: 0 auto;
      }
    }
  </style>
</head>
<body>
  <div class="card-container">
    <div class="card" id="card">
      <div class="card-face front">
        <img src="/card-front.webp" alt="Card Front" class="card-bg" />
        <picture class="logo-overlay">
          <source type="image/webp" srcset="/logo-overlay-rough.webp" />
          <img src="/logo-overlay-rough.svg" alt="Logo" />
        </picture>
        <img src="/corner top-left.svg"     class="corner top-left"    alt="" />
        <img src="/corner top-right.svg"    class="corner top-right"   alt="" />
        <img src="/corner bottom-left.svg"  class="corner bot-left"    alt="" />
        <img src="/corner bottom-right.svg" class="corner bot-right"   alt="" />
      </div>

      <div class="card-face back">
        <img src="/card-back.webp" alt="Card Back" class="card-bg" />
        <div class="back-text desktop">
          <picture><img src="/suit-spade.svg" alt="" /></picture>
          <picture><img src="/wonder.svg" alt="WONDER" /></picture>
          <picture><img src="/suit-diamond.svg" alt="" /></picture>
          <picture><img src="/dream.svg" alt="DREAM" /></picture>
          <picture><img src="/suit-club.svg" alt="" /></picture>
          <picture><img src="/believe.svg" alt="BELIEVE" /></picture>
          <picture><img src="/suit-heart.svg" alt="" /></picture>
        </div>
        <div class="back-text mobile">
          <picture><img src="/suit-spade.svg" alt="" /></picture>
          <picture><img src="/wonder.svg" alt="WONDER" /></picture>
          <picture><img src="/suit-diamond.svg" alt="" /></picture>
          <picture><img src="/dream.svg" alt="DREAM" /></picture>
          <picture><img src="/suit-club.svg" alt="" /></picture>
          <picture><img src="/believe.svg" alt="BELIEVE" /></picture>
          <picture><img src="/suit-heart.svg" alt="" /></picture>
        </div>
      </div>
    </div>
  </div>

  <script>
    const card = document.getElementById('card');
    let clicked = false;

    card.addEventListener('mouseenter', () => {
      if (!clicked) card.classList.add('is-flipped');
    });

    card.addEventListener('mouseleave', () => {
      if (!clicked) card.classList.remove('is-flipped');
    });

    card.addEventListener('click', () => {
      clicked = !clicked;
      card.classList.toggle('is-flipped');
    });

    function updateOrientation() {
      const isPortrait = window.innerHeight > window.innerWidth;
      card.classList.toggle('rotate-mobile', isPortrait);
    }

    window.addEventListener('resize', updateOrientation);
    window.addEventListener('orientationchange', updateOrientation);
    updateOrientation();
  </script>
</body>
</html>
